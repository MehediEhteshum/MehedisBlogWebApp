<div class="row">
  <!-- Blog Post Content Column -->
  <div class="col-lg-8">
    <!-- Blog Post -->
    <!-- Title -->
    <br>
    <div class="jumbotron">
      <h1>Welcome to Mehedi's Articles. </h1>
      <p>Awesome application for simple blogging!</p>
      <p></p>
    </div>
  </div>

  <!-- Blog Sidebar Widgets Column -->
  <div class="col-md-4">
    <br>
    <!-- Side Widget Well -->
    <div class="well">
      <h4>Recent Posts</h4>
      <% @articles.each do |article| %>
      <strong><%= link_to article.title, article %></strong><br />
      <i>Created by: <%= article.user.username %></i>
      <p><%= truncate(article.body) %></p>
      <% end %>
    </div>
  </div>
</div>